version: '3.8'
services: 
  db:
    cap_add:
      - SYS_NICE # Supress not useful error messages
    image: mysql:8.0.33 # Retirar versão correta e verificar no DockerHub :D
    restart: always # Reinicia o contâiner em caso de falha
    ports:
      - "3309:3306" # Porta 3309 p/ banco Desenvolvimento
    environment:
      - MYSQL_DATABASE=henriquedb10
      - MYSQL_ROOT_PASSWORD=uniabat3
    volumes:
      - db_data:/var/lib/mysql
  
  app:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "83:80" # Porta 80 no container pra 83 da VM (eu acho)
    depends_on:
      - db
    volumes:
      - ./app:/var/www/henriquedois

volumes:
 db_data: